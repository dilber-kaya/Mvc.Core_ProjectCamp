@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    <br />
    @if (Model.Count() == 0)
    {
        <h3>Bu blogda henüz yorum yapılmamış. İlk yorumu siz yazın.</h3>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                    <br />
                </div>
            </div>
        }
    }
</div>
<br />